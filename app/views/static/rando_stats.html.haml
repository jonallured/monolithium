- content_for :head do
  = stylesheet_link_tag 'rando', media: 'all'
  %script(src="https://d3js.org/d3.v4.min.js")
  = javascript_include_tag 'rando'

%header
  %h1 The Rando Calrissian Football Pool

%div#page
  %h1 Stats

  %h2 Rando's Record

  #running-record-data{data: { data: running_record.to_json }}

  #stat-data{data: { stats: stats.to_json }}

  %h2 2014 Pick Counts
  %svg(class="chart s2014")

  %h2 2015 Pick Counts
  %svg(class="chart s2015")

  %h2 2016 Pick Counts
  %svg(class="chart s2016")

  %h2 2017 Pick Counts
  %svg(class="chart s2017")

  :javascript
    document.addEventListener("DOMContentLoaded", renderStats())
