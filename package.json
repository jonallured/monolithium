    "moduleDirectories": [
      "node_modules",
      "<rootDir>/app/javascript"
    ]
  },
  "scripts": {
    "prettier": "prettier --write 'app/javascript/**/*.js'",
    "prettier-check": "prettier --check 'app/javascript/**/*.js'",
    "test": "jest"
  }
